	note = {\_eprint: https://onlinelibrary.wiley.com/doi/pdf/10.1111/btp.12014},
	keywords = {agouti, anti-predation defenses, peccary, seed dispersal, seed predation},
	pages = {333--342},
	file = {Full Text PDF:C\:\\Users\\tschernosterova\\Zotero\\storage\\5SB8FF3K\\Kuprewicz - 2013 - Mammal Abundances and Seed Traits Control the Seed.pdf:application/pdf},
