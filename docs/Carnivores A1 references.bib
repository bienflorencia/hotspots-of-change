@article{dias_trophic_2016,
	title = {Trophic and spatio-temporal niche of the crab-eating fox, {Cerdocyon} thous ({Linnaeus}, 1766) ({Carnivora}: {Canidae}), in a remnant of the {Caatinga} in northeastern {Brazil}},
