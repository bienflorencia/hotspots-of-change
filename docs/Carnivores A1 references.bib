	keywords = {Camera trapping, Medium- and large-sized mammals, Neotropical savanna, Orinoco plains, Trophic guilds},
	pages = {e20195914},
	file = {Full Text PDF:C\:\\Users\\tschernosterova\\Zotero\\storage\\HNU2FZ6P\\Castillo-Figueroa et al. - 2019 - Structural differences in mammal assemblages betwe.pdf:application/pdf},
}

