	keywords = {abundancia de mamíferos, Amazonian forest, forest disturbance, forest fragmentation, fragmentación de bosques, mammal abundance, perturbación de bosques, riqueza de especies, selva Amazónica, species abundance, species richness},
	pages = {1626--1640},
