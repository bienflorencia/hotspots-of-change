	number = {3},
	urldate = {2023-01-09},
	journal = {Mammal Research},
	author = {Palmeirim, Ana Filipa and Benchimol, Maíra and Peres, Carlos A. and Vieira, Marcus Vinícius},
	month = jul,
	year = {2019},
	keywords = {Amazon, Land-bridge islands, Marsupials, Rodents, Sherman, Tomahawk},
	pages = {445--454},
	file = {Full Text PDF:C\:\\Users\\tschernosterova\\Zotero\\storage\\L5QUJRCW\\Palmeirim et al. - 2019 - Moving forward on the sampling efficiency of neotr.pdf:application/pdf},
}

@article{marinho_where_2022,
	title = {Where does the fox stay? {First} camera trap records of the threatened hoary fox {Lycalopex} vetulus ({Carnivora}, {Canidae}) in a xeric habitat of a neotropical dry forest–savanna ecotone},
