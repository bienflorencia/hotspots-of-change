	number = {8},
	urldate = {2023-01-09},
	journal = {Wildlife Research},
	author = {Mella-Méndez, Isac and Flores-Peredo, Rafael and Bolívar-Cimé, Beatriz and Vázquez-Domínguez, Guillermo and Mella-Méndez, Isac and Flores-Peredo, Rafael and Bolívar-Cimé, Beatriz and Vázquez-Domínguez, Guillermo},
